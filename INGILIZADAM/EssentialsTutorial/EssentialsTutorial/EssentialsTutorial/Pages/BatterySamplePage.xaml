<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EssentialsTutorial.Pages.BatterySamplePage">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="Battery Sample" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>

            <Label x:Name="BatteryLevel" Text="100%" Padding="30,10,30,10"></Label>
            <Label x:Name="EnergySaver" Text="" Padding="30,10,30,10"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>