<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EssentialsTutorial.Pages.PreferenceSamplePage">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="Preferences Sample" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>

            <Entry x:Name="txtRandom" Margin="20"></Entry>
            <Switch x:Name="swtchRandom" Margin="20" HorizontalOptions="Start"></Switch>
            <Button Text="Save Preference" Clicked="Button_Clicked"></Button>
            <Button Text="Clear" Clicked="Button_Clicked_1"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>