<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EssentialsTutorial.Pages.MapPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Button Text="Open Map" Clicked="Button_Clicked"></Button>
            <Button Text="Open Directions" Clicked="Button_Clicked_1"></Button>
            <Button Text="Open Placemarks" Clicked="Button_Clicked_2"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>