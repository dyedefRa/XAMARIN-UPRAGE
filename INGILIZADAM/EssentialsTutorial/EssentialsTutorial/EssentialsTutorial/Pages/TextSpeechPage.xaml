<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EssentialsTutorial.Pages.TextSpeechPage">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="Text to Speech Sample" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>
            <Picker x:Name="pckLanguages"/>
            <Entry x:Name="txtTexttoSpeech"></Entry>
            <Button Text="Text Please" Clicked="Button_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>