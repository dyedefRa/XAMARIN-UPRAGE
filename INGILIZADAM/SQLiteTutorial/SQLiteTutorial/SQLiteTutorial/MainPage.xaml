<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SQLiteTutorial.MainPage">

    <StackLayout Margin="20,35,20,20">
        <Entry x:Name="txtName" Placeholder="Enter name"></Entry>
        <CheckBox x:Name="subscribed" ></CheckBox>
        <Button Text="Add to Database" Clicked="Button_Clicked"></Button>
        <Button Text="Update Database" Clicked="Button_Clicked_1"></Button>
        <Button Text="Delete Database" Clicked="Button_Clicked_2"></Button>
        <Button Text="Get Subscribed" Clicked="Button_Clicked_3"></Button>
        <Button Text="Get Not Subscribed" Clicked="Button_Clicked_4"></Button>

        <CollectionView x:Name="collectionview" SelectionMode="Single" SelectionChanged="collectionview_SelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout>
                        <Label Text="{Binding Name}" FontSize="Medium"></Label>
                        <Label Text="{Binding Subscribed}" FontSize="Small" TextColor="Silver"></Label>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </StackLayout>
    

</ContentPage>
