<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AcikAkademiUpper3.Pages.MediaPickerPage">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="MediaPicker Sample!" HorizontalTextAlignment="Center" TextColor="White" FontSize="26"></Label>
            </Frame>
            <Button Text="Pick Image" Clicked="Button_Clicked"></Button>
            <Button Text="Take Image" Clicked="Button_Clicked_1"></Button>
            <Image x:Name="resultImage"></Image>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>