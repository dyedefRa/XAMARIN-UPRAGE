<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UsingSocialPlatform.ExtensionViews.PluginShare">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="txtTitle" Placeholder="Title"></Entry>
            <Entry x:Name="txtMessage" Placeholder="Message"></Entry>
            <Entry x:Name="txtUrl" Placeholder="Url"></Entry>
            <Button Text="Share" Clicked="Button_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>